{
    "compilerOptions": {
        "module": "none",
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        // "outFile": "./build/lib.js",
        "outDir": "./build",
        "sourceMap": true,
        "lib": [
            "es2019",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "axios": [
                "node_modules/axios"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}